<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gold_and_black_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin_top"
        android:fontFamily="@font/gameplay"
        android:shadowColor="@color/gold"
        android:shadowDx="6"
        android:shadowDy="10"
        android:shadowRadius="30"
        android:text="@string/prosecco"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="@dimen/large_font"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="@dimen/small_width"
        android:layout_height="@dimen/small_height"
        android:layout_marginEnd="@dimen/medium_margin"
        android:layout_marginBottom="@dimen/large_margin"
        android:alpha="0.90"
        android:fontFamily="@font/splatch"
        android:shadowColor="@color/black"
        android:shadowDx="10"
        android:shadowDy="10"
        android:shadowRadius="40"
        android:text="@string/pong"
        android:textAlignment="center"
        android:textColor="@color/gold"
        android:textSize="@dimen/medium_font"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/buttonClassicGame"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonClassicGame"
        android:layout_width="@dimen/medium_width_button"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_margin_top"
        android:background="@drawable/main_buttons"
        android:fontFamily="@font/gameplay"
        android:padding="@dimen/medium_padding"
        android:shadowColor="@color/gold"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:text="@string/classic_pong"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:textSize="@dimen/small_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonProseccoGame"
        android:layout_width="@dimen/medium_width_button"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_top"
        android:background="@drawable/main_buttons"
        android:fontFamily="@font/gameplay"
        android:padding="@dimen/medium_padding"
        android:shadowColor="@color/gold"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:text="@string/prosecco_pong"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:textSize="@dimen/small_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonClassicGame" />

    <Button
        android:id="@+id/buttonHighscore"
        android:layout_width="@dimen/medium_width_button"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_margin_top"
        android:background="@drawable/main_buttons"
        android:fontFamily="@font/gameplay"
        android:padding="@dimen/medium_padding"
        android:shadowColor="@color/gold"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="20"
        android:text="@string/highscore"
        android:textColor="@color/gold"
        android:textStyle="bold"
        android:textSize="@dimen/small_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonProseccoGame" />


</androidx.constraintlayout.widget.ConstraintLayout>